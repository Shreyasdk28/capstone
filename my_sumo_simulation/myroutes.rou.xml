<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">

    <!-- Vehicle Types -->
    <vType id="car" accel="2.6" decel="4.5" length="5" maxSpeed="50" color="red"/>
    <vType id="bus" accel="1.0" decel="2.5" length="12" maxSpeed="40" color="blue"/>

    <!-- Routes -->
    <route id="route1" edges="edge1 edge2 edge3"/>
    <route id="route2" edges="edge4 edge5 edge6"/>

    <!-- Vehicles -->
    <vehicle id="car_0" type="car" route="route1" depart="0"/>
    <vehicle id="car_1" type="car" route="route1" depart="2"/>
    <vehicle id="bus_0" type="bus" route="route2" depart="5"/>
    <vehicle id="bus_1" type="bus" route="route2" depart="10"/>

</routes>
